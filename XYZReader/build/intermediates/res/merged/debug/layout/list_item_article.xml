<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/small_margin_left"
    android:layout_marginRight="@dimen/small_margin_right"
    android:layout_marginTop="@dimen/small_margin_top"
    android:layout_marginBottom="@dimen/small_margin_btm"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/article_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/small_margin_left"
                android:paddingRight="@dimen/small_margin_left"
                android:paddingBottom="@dimen/small_margin_btm"
                android:maxLines="1"
                android:singleLine="true"
                android:text="date"
                android:textSize="@dimen/text_small"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/article_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/small_margin_left"
                android:paddingRight="@dimen/small_margin_left"
                android:paddingBottom="@dimen/small_margin_btm"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="author"
                android:textSize="@dimen/text_small"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/article_date" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:transitionName="@string/transition_image"/>

        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_margin_left"
            android:paddingTop="@dimen/small_margin_top"
            android:paddingRight="@dimen/small_margin_left"
            android:paddingBottom="@dimen/small_margin_btm"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Title"
            android:textSize="@dimen/text_med"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
